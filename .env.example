# üèì Pickleball Ranking System - Environment Configuration

# Database Configuration (PostgreSQL)
DB_NAME=pickleball_ranking
DB_USER=pickleball_user
DB_PASSWORD=your_secure_database_password_here
DB_HOST=localhost
DB_PORT=5432

# Admin Authentication (REQUIRED - no fallbacks for security)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_EMAIL=admin@yourdomain.com

# Security Secrets (REQUIRED - generate strong random values)
JWT_SECRET=your_jwt_secret_at_least_32_characters_long
CSRF_SECRET=your_csrf_secret_at_least_32_characters_long

# Server Configuration
PORT=3001
NODE_ENV=production

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_API_MAX=100
# Set to true to completely disable rate limiting (dev only)
DISABLE_RATE_LIMITING=false

# Dynamic Rate Limiting Thresholds (0.0 to 1.0)
# Only start reducing rate limits when these thresholds are exceeded
# Below these thresholds, rate limits stay at 100% (no reduction)
RATE_LIMIT_CPU_WARNING=0.7      # Start gentle reduction at 70% CPU
RATE_LIMIT_CPU_CRITICAL=0.9     # Aggressive reduction at 90% CPU
RATE_LIMIT_MEMORY_WARNING=0.8   # Start gentle reduction at 80% memory
RATE_LIMIT_MEMORY_CRITICAL=0.95 # Aggressive reduction at 95% memory

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Notes:
# - All secrets are REQUIRED - no fallback values for security
# - Use strong, unique passwords and secrets (32+ characters)
# - Never commit the actual .env file to version control
# - Rotate secrets regularly
# - Use different secrets for dev/staging/prod environments
# - Generate secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
